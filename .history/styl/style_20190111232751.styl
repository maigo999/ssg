$nav01 = #ff7ca4
$nav02 = #62bd66
$nav03 = #feb67e
$nav04 = #ffd261
$nav05 = #77adff
$about = #5f8373
@font-face
    font-family: 'corp'
    src: url("../font/corp_round_v1.ttf")


html
    font-size 62.5%

body
    background-image url('../img/backloop.png')
    background-repeat repeat
    .mean-bar
        height 60px
        background url("/img/ssglogo.svg")
        background-size: contain
        object-fit: scale-down
        background-repeat: no-repeat
        background-position: 50% 50%
        
        .mean-nav
            background:url('../img/backloop.png')
            margin-top: 65px
            li:last-child
                border-bottom: 1px solid #32C4FE
            ul li a
                color: #32C4FE
                font-size: 20px
                text-align: center
                border-top 1px solid #32C4FE

        .meanmenu-reveal 
            margin-top: 13px
            span
                background: #32C4FE
        .meanclose
            color: #32C4FE
    header
        margin auto
        width 960px
        height 100px
        display flex
        align-items: center
        justify-content: space-between
        alin-items center
        @media(max-width: 960px)
            width: 100%
            height 200px
            justify-content: center

        @media(max-width: 680px)
            display: none
        .sitelogo
            display: flex
            align-items: center
            margin-left: 10px
            height 80px
            width: auto
            @media(max-width: 960px)
                height 60px
            img
                width auto
                height 100%
        nav ul
            list-style: none
            display: flex
            align-items: center
            justify-content: space-around
            width: 700px
            @media(max-width: 960px)
                align-items: flex-start
                justify-content: flex-start
                flex-wrap: wrap
                width: 400px
            li
                height 80px
                width: 129px
                font-family: corp
                a
                    width: 100%
                    height 100%
                    text-decoration: none
                    color: white
                    border-radius: 10px
                    border: 5px solid white
                    display: flex
                    align-items: center
                    justify-content: center
                    font-size 1.8rem
                    &:hover
                        filter: saturate(50%);
                        transition 0.5s

            .nav_01
                background: $nav01
            .nav_02
                background: $nav02
            .nav_03
                background: $nav03
            .nav_04
                background: $nav04
            .nav_05
                background: $nav05


                


.top_visual
    width: 100vw
    height auto
    img
        width: 100%
    .Top_sp
        display: none
    @media(max-width: 680px)
        .Top_pc
