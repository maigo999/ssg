    height 660px
    margin: auto
    border-bottom: 30px solid #d7b28c
    margin-top: 100px
    margin-bottom: 100px
    @media(max-width: 960px)
        width: 85%
        height auto
    @media(max-width: 680px)
        width: 100%
        height auto
        margin-top: 30px
    .box_twitter
        width: 400px
        height 500px
        @media(max-width: 960px)
            margin-bottom: 50px
        @media(max-width: 680px)
            width: 90%
            margin-bottom: 10px
        .twitter-timeline
            height 100%
            width: 100%

    .box_about
        width: 400px
        height 500px
        @media(max-width: 680px)
            width: 100%
            p
                width: 90%
                margin: auto
        h2
            color: #ff9a7a
            margin-top: 100px
            font-size 2.4rem
            font-family: "M PLUS Rounded 1c"
            text-align: center

        p
            color: white
            font-size 2rem
            line-height 50px
            text-align: left
            margin-top 20px
            font-family: "Noto Sans JP";
            @media(max-width: 680px)
                text-align: center

footer
    height 100px
    width: 960px
    margin: auto
    display: flex
    flex-direction: column
    justify-content: space-around
    position: relative
    @media(max-width: 960px)
        width: 100%
    .sitelogo
        display: flex
        align-items: center
        margin-left: 10px
        height 50px
        width: auto
        position: absolute
        left 50px
        bottom: 50px
        @media(max-width: 960px)
            justify-content: center
            top -30px
            bottom 0 
            left 0
            right 0
        img
            width auto
            height 50px
    p
        display: flex
        align-items: flex-end
        justify-content: center
        text-align: center
    .footer_top
        display: flex
        justify-content: center
        align-items: center
        @media(max-width: 960px)
            display: none
        nav ul
            display: flex
            justify-content: center
            align-items: center
            width: 500px
            li
                list-style none
                text-align: center
                width: 100px
                color: black
                &:not(:last-child)
                    border-right: 2px solid gray
                a
                    text-decoration: none
                    color: black

.character_title
    font-size 2.6rem
    font-family: corp
    justify-content: center
    display: flex
    padding-top: 100px
    @media(max-width: 960px)
        font-size 2.4
        padding-top: 50px
    @media(max-width: 680px)
        font-size 1.8rem
        width: 100%
        padding-top: 30px

.character_list
    width: 960px
    height: 100px
    margin: auto
    margin-top: 80px
    @media(max-width: 960px)
        width: 100%
        transform: scale(0.8)
        margin-top: 30px
    @media(max-width: 680px)
        width: 400px
        height: auto
        margin-top: 20px
    ul
        display flex
        justify-content: center
        @media(max-width: 680px)
            flex-wrap: wrap
        li
            width 100px
            height 100px
            list-style none
            border-radius: 50%
            display: flex
            justify-content: center
            align-items: center
            margin: 0 5px 0 5px
            a
                width: 100%
                height 100%
                border-radius 50%
                text-decoration: none
                background: white
                border: 5px solid #ffd1ae
                overflow: hidden
                display: flex
                justify-content: center
                align-items: center
                &:hover
                    overflow: visible
                img
                    width: 100%
                    height 100%
                    &:hover
                        width: 130%
                        height 130%
                        border-radius: 50%
                        transition: 1s

.character_box
    display: flex
    justify-content: center
    align-items: center
    border-top: 50px
    width: 960px
    height 700px
    margin: auto
    @media(max-width: 960px)
        transform: scale(0.8)
        width: 100%
        height 600px
    @media(max-width: 680px)
        width: 100%
        height: 950px
        flex-wrap: wrap-reverse

.character_profile
    width: 350px
    height: 480px
    background: white
    border-radius: 20px;
    border: #ffd1ae 3px solid
    margin-right: 10px
    display: flex
    align-items: center
    justify-items: center
    @media(max-width: 680px)
        width: 90%
        height auto
        padding: 20px 0 20px 0
        margin-right: 0
        margin-bottom: 100px
        margin-top: 10px
    .profile_flex
        margin: auto
        width: 320px
        
    .profile_box
        display: flex
        h3
            font-family: "M PLUS Rounded 1c"
            font-size: 2rem
            margin-right: 10px
            text-align: right
            width: 120px
            line-height: 50px
        p
            font-family: "Noto Sans JP"
            font-size: 1.6rem
            text-align: left
            line-height: 50px

.character_visual
    width: 400px
    height 600px
    border-radius: 20px
    border: 5px dotted #ffd1ae
    background: rgba(255,255,255,0.8)
    margin-left: 10px
    display: flex
    justify-content: center
    align-items: center
    position relative
    img
        width: auto
        height 90%
    @media(max-width: 680px)
        width: 100%
        margin-left: 0
        margin-top: 30px
    .change_scss
        position absolute
        top 50px
        right: 50px
        text-align: center
        border-radius: 50px
        font-size 2rem
        width: 70px
        height: 70px
        border: 5px dotted #ffd1ae
        overflow hidden
        a
            width: 100%
            height 100%

            img
                width: 100%
                height 100%


.word_box
    width: 960px;
    height: auto
    background: white
    margin: 50px auto 50px auto
    padding-top: 50px
    border: #ffd1ae 5px solid
    border-radius: 20px
    position relative
    @media(max-width: 960px)
        width: 90%
    @media(max-width: 680px)
        width: 100%
    h3
        font-size: 3.4rem
        font-weight: bold
        position: absolute
        left 70px
        top -30px
        font-family: "M PLUS Rounded 1c"
        color: #FF8668
        font-weight: bold
    h4
        font-size 2.7rem
        width: 80%
        word-wrap: break-word;
        word-break: break-all

        margin: 30px auto 30px auto

        span
            background: linear-gradient(transparent 70%, #FFBFBB 70%);
    p
        font-size 2.6rem
        width: 80%
        word-wrap: break-word;
        word-break: break-all
        margin: 10px auto 10px auto
        color: #696969
        &:last-child
            margin-bottom: 80px
            
    pre
        width: 80%
        margin: auto

    code
        font-size 1.8rem
        border-radius: 20px
    .word_link
        width 80%
        margin: 40px auto 40px auto
        a
            font-size 1.8rem
            padding: 20px
            border-radius: 20px
            text-decoration: none
            color: white
            background #FFBFBB
            border: 5px solid #ffd1ae
            box-sizing: border-box 
            &:hover
                background #ffd1ae
                border: 5px solid  #FFBFBB
                transition: 0.5s

